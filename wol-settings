#!/bin/bash
# WoL Game Server Proxy - Settings Manager

set -e

CONFIG_FILE="/etc/wol-proxy/config.json"
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

log_info() { echo -e "${GREEN}[INFO]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }

if [[ $EUID -ne 0 ]]; then
    log_error "This script must be run as root (use sudo)"
    exit 1
fi

if [[ ! -f "$CONFIG_FILE" ]]; then
    log_error "Configuration file not found. Run wol-setup first."
    exit 1
fi

# Show current settings and allow editing
echo -e "${BLUE}🛠️ WoL Proxy Settings${NC}"
echo "====================="
echo
echo "Current configuration file: $CONFIG_FILE"
echo
echo "Choose an option:"
echo "1) Edit configuration file directly"
echo "2) Run interactive setup again"
echo "3) Show current settings"
echo "4) Restart service"
echo "5) Exit"
echo

read -p "Enter your choice [1-5]: " choice

case $choice in
    1)
        log_info "Opening configuration file in nano..."
        nano "$CONFIG_FILE"
        log_info "Restarting service..."
        systemctl restart wol-proxy.service
        ;;
    2)
        log_info "Running interactive setup..."
        wol-setup
        ;;
    3)
        log_info "Current settings:"
        cat "$CONFIG_FILE" | python3 -m json.tool 2>/dev/null || cat "$CONFIG_FILE"
        ;;
    4)
        log_info "Restarting service..."
        systemctl restart wol-proxy.service
        systemctl status wol-proxy.service --no-pager -l
        ;;
    5)
        echo "Bye!"
        ;;
    *)
        log_error "Invalid choice"
        ;;
esac